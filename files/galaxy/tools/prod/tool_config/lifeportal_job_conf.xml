<job_conf>

     <plugins workers="4">
        <plugin id="local" type="runner" load="galaxy.jobs.runners.local:LocalJobRunner"/>
        <plugin id="slurm" type="runner" load="galaxy.jobs.runners.slurm:SlurmJobRunner"/>
     </plugins>

    <destinations default="local">
        <destination id ="local" runner="local"/>
        <destination id="slurm" runner="slurm" />
        <destination id="generate_slurm_job_params" runner="dynamic">
            <param id="type">python</param>
            <param id="function">integrate_job_destination_params</param>
        </destination>
        <destination id="transcriptome" runner="dynamic">
           <param id="type">python</param>
           <param id="function">is_user_in_role</param>
        </destination>
        <!-- This is a destination with fixed destination params - used to test connection to cluster -->
        <destination id="slurm_static" runner="slurm">
          <param id="nativeSpecification">--account=ec12 --time=05:00 --mem-per-cpu=2 --nodes=1 --ntasks-per-node=1</param>
        </destination>
        <destination id="slurm_minimal" runner="slurm">
          <param id="nativeSpecification">--account=ec12 --time=10:00 --mem-per-cpu=1024 --nodes=1 --ntasks=1</param>
        </destination>
     </destinations>
     
     <tools>
        <tool id="upload" destination="local"/>
       
        <tool id="g_squeue" destination="generate_slurm_job_params" resources="fox"/>
        <tool id="g_get_from_home" destination="generate_slurm_job_params" resources="fox_home"/>
        <tool id="testing" destination="generate_slurm_job_params" resources="fox"/>
        <tool id="module_test" destination="slurm_minimal" resources="fox"/>
        <tool id="g_load" destination="generate_slurm_job_params" resources="fox"/>
        <tool id="ncbi_tblastn_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="blastxml_to_tabular" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_blastdbcmd_info" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_blastdbcmd_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_blastn_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_blastp_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_blastx_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_convert2blastmask_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_dustmasker_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_makeblastdb" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_makeprofiledb" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_psiblast_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_rpsblast_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_rpstblastn_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_segmasker_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_tblastn_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="ncbi_tblastx_wrapper" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="bwa_mem" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="bwa" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="spades" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="fastqc" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="bowtie2" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="trinity" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="bam_to_sam" destination="generate_slurm_job_params"  resources="fox"/>
	<tool id="fastq_groomer" destination="generate_slurm_job_params"  resources="fox"/>
      </tools>

    <limits>
        <limit type="registered_user_concurrent_jobs">5</limit>
        <limit type="anonymous_user_concurrent_jobs">1</limit>
        <limit type="destination_user_concurrent_jobs" id="local">5</limit>
        <limit type="destination_user_concurrent_jobs" tag="slurm">10</limit>
        <limit type="destination_total_concurrent_jobs" id="local">5</limit>
        <limit type="destination_total_concurrent_jobs" tag="longjobs">10</limit>
        <limit type="walltime">168:00:00</limit>
        <limit type="total_walltime" window="7">168:00:00</limit>
        <limit type="output_size">50GB</limit>
    </limits>
    
    <resources>
        <group id="fox2">processors,memory,time,project</group>
        <group id="fox">nodes,processors,memory,time,partition,project</group>
        <group id="fox_home">nodes,processors,memory,time,partition,project,userhome</group>
   </resources>

 </job_conf>
